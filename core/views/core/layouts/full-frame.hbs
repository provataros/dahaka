<html>
    
<head>
    <link rel="stylesheet" type="text/css" href="/css/font-awesome.css">
    <style>
        html,body{
            padding : 0px;
            margin : 0px;
            box-sizing: border-box;
        }
        #banner{
            background-color  :white;
            border-bottom : 0.5px solid #dedede;
            box-sizing: border-box;
            width : 100%;
            height : 35px;
        }
        #container{
            display : flex;
        }
        #context{
            flex-grow: 1;
            display : flex;
            flex-direction: column;
        height: 100%;
        }
        #content{
            flex-grow : 1;
            display : flex;
        }
        #path-trace{
            padding-left : 20px;
        }
        #path-trace > div:hover{
            background-color : #cbdcca;
        }
        #path-trace > div{
            font-size : 18px;
            display : inline-flex;
            align-items : center;
            height: 100%;
            padding : 0px 10px;
            cursor : pointer;
        }
        #path-trace  a {
            color : inherit !important;
            text-decoration: none;
        }


        .iframe {
            flex-grow : 1;
            border : none;
        }
    </style>
</head>
<body>
    <div id = "container">
        <div id = "context">
            <div id = "banner">
                <div id="path-trace">
                    <div><a href="/">Home</a></div> 
                    {{#each breadcrumb}}
                        <div><a href="{{url}}">{{label}}</a></div> 
                    {{/each}}
                </div>
            </div>
            <div id = "content">
                {{{body}}}
            </div>
        </div>
    </div>
    
</body>
</html>